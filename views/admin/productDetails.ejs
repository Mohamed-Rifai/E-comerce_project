<%- include('../partials/side-admin') %>
      <div class="col py-3">

        <section>
        <div class="d-flex align-items-center justify-content-center">
          <h1 class="text-decoration-underline">Product details</h1>
        </div>
        <div class="container mt-5 table-responsive"> 
        <table class="table mt-5" id="table">
          <thead>
            <tr>
              <th scope="col">No</th>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col">Category</th>
              <th scope="col">Description</th>
              <th scope="col">Stock</th>
              <th scope="col">Image</th>
              <th scope="col">Actions</th>

            </tr>
          </thead>
          <tbody>
           <% let count=1 %>
           <% product.forEach((products)=> { %>
            <tr>
                <td>
                <%=count %>
                </td>
                <td>
                 <%=products.name %>
                </td>
                <td>
                 <%=products.price%>
                </td>
                <td>
                  <%=products.category.category_name%>
                </td>
                <td>
                  <%=products.description%>
                </td>
                <td>
                  <%=products.stock%>
                </td>
                <td><img style="width:50px; height:50px" src="/admin-images/<%=products._id%>.jpg" alt=""></td>
                <td>
                  <a href="/admin/edit-product/<%=products._id%>" class="btn btn-success">Edit</a>
                  <!-- Button trigger modal -->
                  <% if(products.delete===false) { %>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                      data-bs-target="#exampleModal-<%=products._id%>">
                      Delete
                    </button>
                    <% }else{ %>
                      <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#exampleModal-<%=products._id%>">
                        Restore
                      </button>
                      <%}%>
                  <!-- Modal -->
                  <div class="modal fade" id="exampleModal-<%=products._id%>" tabindex="-1"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class="modal-title fs-5" id="exampleModalLabel">Delete confirmation</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                        </div>
                        <% if(products.delete===false) { %>
                          <div class="modal-body">
                            Are you sure you want to delete <%=products.name %>?
                          </div>
                          <% }else{ %>
                            <div class="modal-body">
                              Are you sure you want to restore <%=products.name %>?
                            </div>
                            <%}%>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                  data-bs-dismiss="modal">Close</button>
                                <% if(products.delete===false) { %>
                                  <a href="/admin/deleteProduct/<%=products._id%>"><button type="button"
                                      class="btn btn-danger">Delete</button></a>
                                  <% }else{ %>
                                    <a href="/admin/restoreProduct/<%=products._id%>"><button type="button"
                                        class="btn btn-danger">Restore</button></a>
                                    <%}%>
                              </div>
                      </div>
                    </div>
                  </div>
          </td>
        </tr>
        <% count++ %>
          <% }) %>

                
          </tbody>
        </table>
        </div>
      </section>
      </div>

      
    </div>
  </div>
</body>
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"></script>

</html>