<%- include('../partials/side-admin') %>


      <div class="col py-3">

        <div class="container mt-5 w-50 border ">
          <form action="/admin/postProduct" method="post" id="form" enctype="multipart/form-data">
            <div class="d-flex justify-content-center">
              <h1>Add Product</h1>
            </div>
            <div class="form-outline flex-fill mb-0 mt-4">
              <input type="text" placeholder="Product name" name="name" id="p-name"
                class="form-control" required/>
            </div>
            <div class="form-outline flex-fill mb-0 mt-4">
              <input type="text" placeholder="Price per kg" name="price" id="price" class="form-control" required/>
            </div>
            <div class="form-outline flex-fill mb-0 mt-4">
              <!-- <input type="text" placeholder="Category" name="category" id="category" class="form-control" /> -->
              <select class="form-select " name="category" required aria-label="Default select example">
                <option selected disabled="disabled" value="" >Category</option>
              <% category.forEach((categories)=>{ %>  
                <option value="<%=categories._id %>"  ><%=categories.category_name %></option>
            <% }) %>
                
              </select>
            </div>
            <div class="form-outline flex-fill mb-0 mt-4">
              <input type="text" placeholder="Description" name="description" id="description" class="form-control" required/>
            </div>
            <div class="form-outline flex-fill mb-0 mt-4">
              <input type="text" placeholder="Stock" name="stock" id="stock" class="form-control" required/>
            </div>
            <div class="form-outline flex-fill mb-0 mt-4">
              <input class="form-control" placeholder="Product image" type="file" name="image"
                id="image" required>
            </div>
            <div class="d-flex justify-content-center mt-4 ">
              <button type="submit" class="btn btn-success btn-block mb-4">Add product</button>
            </div>

          </form>
        </div>

      </div>
