<%- include('../partials/user-header') %>
<!-- breadcrumb-section -->


<div class="bg-info ">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="text-info">
                    <p>Fresh and Organic</p>
                    <h1>Shop</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->

<!-- products -->
<div class="product-section mt-150 mb-150 bg-info">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                <div class="product-filters">
                    <ul>
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".strawberry">Strawberry</li>
                        <li data-filter=".berry">Berry</li>
                        <li data-filter=".lemon">Lemon</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row product-lists">

            <% product.forEach((products)=>{ %>
            <div class="col-lg-4 col-md-6 text-center my-3">
                <div class="single-product-item">
                    <div class="product-image">
                        <a href="/product-view/<%=products._id%>"><img style="width:300px; height:225px" src="/admin-images/<%=products._id%>.jpg" alt=""></a>
                        
                    </div>
                    <p class=""><%= products?.name %></p>
                    <p class="product-price"> <%= products?.price %>₹  </p>
                    <!-- <p class="product-price"><span>Per Kg</span> 500₹ </p> -->
                    <a href="/product-view/<%=products._id%>" class="btn btn-success">Buy now</a>
                </div>
            </div>
       <% }) %>

        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="pagination-wrap">
                    <ul>
                        <li><a href="#">Prev</a></li>
                        <li><a href="#">1</a></li>
                        <li><a class="active" href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">Next</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/user-footer') %>