    <script>
        $("#placeOrder").submit((e) => {
            e.preventDefault();
            $.ajax({
                url: '/placeOrder',
                method: 'post',
                data: $('#placeOrder').serialize(),
                success: (resposnse) => {
                    if (resposnse.success) {
                        location.href = "/orderSuccess";
                    }else{
                        location.href = "/viewCart";
                    }
                }
            })
        })
    </script>

