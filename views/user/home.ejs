     <section style="background-color: #eee;">
      <div class="text-center container py-5">
        <h4 class="mt-4 mb-5"><strong>Bestsellers</strong></h4>
    
        <div class="row">
          <% product.forEach((products)=>{ %>
          <div class="col-lg-4 col-md-12 mb-4">
            <div class="card" style="width: 20rem;height: auto;">
              <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                data-mdb-ripple-color="light">
                <img src="/admin-images/<%=products?._id%>.jpg"
                  class="w-100" />
                <a href="#!">
                  <div class="mask">
                    <div class="d-flex justify-content-start align-items-end h-100">
                      <h5><span class="badge bg-primary ms-2">New</span></h5>
                    </div>
                  </div>
                  <div class="hover-overlay">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                  </div>
                </a>
              </div>
              <div class="card-body">
                <a href="" class="text-reset">
                  <h5 class="card-title mb-3"><%= products?.name %></h5>
                </a>
                <a href="" class="text-reset">
                  <p><%= products?.category?.category_name %></p>
                </a>
                <h6 class="mb-3">â‚¹<%= products.price %></h6>
                <% if(customer){ %>
                  <a href="/product-view/<%= products?._id %>" class="btn btn-primary">Buy now</a>
                  <a class="btn btn-danger" href="/add-to-wishlist/<%= products?._id %> "><i class='fa fa-heart'> <sub>+</sub></i></a>
                  <% }else{ %>
                    <a href="/login" class="btn btn-danger">Buy now</a>
                    <% } %>
              </div>
            </div>
          </div>
          <% }) %>
         
      </div>
